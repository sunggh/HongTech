<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/progress2_img"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/help_progress2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/progress2_img"
            android:layout_alignTop="@id/progress2_img"
            android:layout_alignRight="@id/progress2_img"
            android:layout_alignBottom="@id/progress2_img"
            android:layout_marginTop="20dp"
            android:text="@string/help_slide_8_title"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/progress2_img"
            android:layout_alignTop="@id/progress2_img"
            android:layout_alignRight="@id/progress2_img"
            android:layout_alignBottom="@id/progress2_img"
            android:layout_marginTop="20dp"
            android:text="@string/help_slide_8_desc"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/slide_desc" />

    </LinearLayout>
</RelativeLayout>